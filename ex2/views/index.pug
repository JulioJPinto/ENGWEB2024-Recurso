extends layout

block content
  h1 Main Page
  table
    thead
      tr
        th ID
        th Title
        th Author
        th Publish Date
        th Pages
    tbody
      each book in books
        tr
          td
            a(href=`/book/${book.id}`) #{book.id}
          td #{book.title}
          td
            a(href=`/author/${book.authorId}`) #{book.author}
          td #{book.publishDate}
          td #{book.pages}
